<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="re.yuugu.hzx.infrastructure.persistent.dao.IRuleTreeDao">

    <resultMap id="dataMap" type="re.yuugu.hzx.infrastructure.persistent.po.RuleTree">
        <id column="id" property="id"/>
        <result column="tree_id" property="treeId"/>
        <result column="tree_name" property="treeName"/>
        <result column="tree_desc" property="treeDesc"/>
        <result column="root_node" property="rootNode"/>

    </resultMap>

    <select id="queryRuleTreeByRootNode" resultMap="dataMap">
        SELECT tree_id, tree_name, tree_desc, root_node
        FROM rule_tree
        WHERE root_node = #{rootNode}
    </select>

</mapper>
