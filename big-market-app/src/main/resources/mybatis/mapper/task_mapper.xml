<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="re.yuugu.hzx.infrastructure.persistent.dao.ITaskDao">

    <resultMap id="dataMap" type="re.yuugu.hzx.infrastructure.persistent.po.Task">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="topic" property="topic"/>
        <result column="message" property="message"/>
        <result column="message_id" property="messageId"/>
        <result column="state" property="state"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <select id="queryNoSendMessageTaskList" resultType="re.yuugu.hzx.infrastructure.persistent.po.Task"
            resultMap="dataMap">
        SELECT user_id,topic,message,message_id,state
        FROM task
        WHERE state='fail'
    </select>
    <insert id="insert" parameterType="re.yuugu.hzx.infrastructure.persistent.po.Task">
        insert into task
        (user_id,topic,message,message_id,state,create_time,update_time)
        values (#{userId}, #{topic},#{message}, #{messageId}, #{state}, now(), now())
    </insert>
    <update id="updateStateToCompleted">
        update task
        set state='completed',
            update_time=now()
        where user_id=#{userId} and message_id=#{messageId}
    </update>
    <update id="updateStateToFail">
        update task
        set state='fail',
            update_time=now()
        where user_id=#{userId} and message_id=#{messageId}
    </update>
</mapper>
