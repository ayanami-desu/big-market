<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="re.yuugu.hzx.infrastructure.persistent.dao.IUserCreditAccountDao">

    <resultMap id="dataMap" type="re.yuugu.hzx.infrastructure.persistent.po.UserCreditAccount">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="total_amount" property="totalAmount"/>
        <result column="available_amount" property="availableAmount"/>
        <result column="account_status" property="accountStatus"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>

    </resultMap>
    <insert id="insert" parameterType="re.yuugu.hzx.infrastructure.persistent.po.UserCreditAccount">
        insert into user_credit_account(user_id, total_amount, available_amount, account_status, create_time,
                                        update_time)
        values (#{userId}, #{creditAmount}, #{creditAmount}, 'open', now(), now())
    </insert>
    <update id="updateUserCreditAccount">
        update user_credit_account
        set total_amount=total_amount + #{creditAmount},
            available_amount=available_amount + #{creditAmount},
            update_time=now()
        where user_id = #{userId}
          and account_status = 'open'
    </update>
</mapper>
